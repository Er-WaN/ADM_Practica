<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:orientation="vertical" >
        
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="0dip"
	        android:src="@drawable/image" />

        <Button
            android:id="@+id/main_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="200dp"
            android:layout_weight="0.20"
            android:onClick="onClickPlay"
            android:text="@string/main_play" />

        <Button
            android:id="@+id/manin_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/main_play"
            android:onClick="onClickScores"
            android:text="@string/main_scores" />

        <Button
            android:id="@+id/main_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/manin_scores"
            android:onClick="onClickSettings"
            android:text="@string/main_settings" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/titulo"
        android:textColor="#000000"
        android:textSize="24dp" />

</RelativeLayout>
